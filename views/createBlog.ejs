<html>
<body>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<header class="masthead">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Create New Post</h1>
          </div>
        </div>
      </div>
    </div>
  </header>
  <% if (message.length > 0) { %>
    <div class=" p-2  bg-danger text-center  text-black" style="width: auto; height: 50px;">
      <%= message %>
    </div>
  <% } %>
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <form  method="POST" id = "createBlogForm"  >
          <div class="control-group">
                   
            <div class="form-group floating-label-form-group controls mt-3">
              <label >Title</label>
              <input type="text" id = "title" name="title" placeholder="Title" class="form-control mt-2" required>
            </div>
          </div>
          <div class="control-group">
                   
            <div class="form-group floating-label-form-group controls mt-3">
              <label >Tags</label>
              <input type="text" id = "Tags" name="Tags" placeholder="Tags" class="form-control mt-2" required>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls mt-3">
              <label>Reading Time</label>
              <input type="text" id = "reading_time" name="reading_time" placeholder="Reading Time" class="form-control mt-2" required>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls mt-3">
              <label>Content</label>
              <textarea  name="content" id = "content" placeholder="Content ..." cols="30" rows="10" class="form-control col-lg-8 col-md-10 mx-auto mt-2" required></textarea>
            </div>
          </div>
          <div class="form-group mt-3">
            <input type="file" id = "file" name="image" class="form-control-file" required>
          </div>
          <div class="form-group my-4 text-center mt-3">
            <button class="btn btn-primary" type="submit" id = "postBtn">Create Post</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>
  <script src="/public/js/createBlog.js"></script>