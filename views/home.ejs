<!DOCTYPE html>
<html lang = "en">
<head>
	<meta charset = "UTF-8">
	<title> My Form </title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

	<style>
		#mylink{
			font-size: 25px;
		}

		
	</style>
</head>
<body align='center'>
        <header>
	</header>

	<div class="container-fluid bg-red">
		<div class="row mt-3 mx-3">
			<% for(let i=0; i<content.length; i++) { %>
			<div class="col-15">
				
					<div class="card mt-3 mb-3 p-3  bg-secondary ">
						
						<h5 class="text text-info text-white">Title : <%=content[i].title%></h5>
						<h5 class="text text-info text-white">Reading Time : <%=content[i].reading_time%></h5>
						<!-- <div>
							<h5 class="text text-danger text-important text-white">Author : <%=content[i].auther.fname%></p>
						</div> -->
						<p class="text text-danger text-important text-white" id="date">Published On : <%=new Date(content[i].createdAt).toDateString()%></p> 
						<div >
							<a href= blog/<%=content[i].id%> class="btn btn-warning px-2" id="blog">Read Blog</a> 
						</div> 
					</div>
					
				
			</div>
			<% } %>
			

		</div>

		<div class="d-flex justify-content-center">
		<% if (totalPages > 0) { %>
			<ul class="pagination text-center">
				<% if (currentPage == 1) { %>
					<li class="disabled page-item" ><a class="page-link">First</a></li>
				<% } else { %>
					<li class="page-item"><a class="page-link" href="/?page=1">First</a></li>
				<% } %>
				<% var i = (Number(currentPage) > 5 ? Number(currentPage) - 4 : 1) %>
				<% if (i !== 1) { %>
					<li class="disabled page-item"><a class="page-link">...</a></li>
				<% } %>
				<% for (; i <= (Number(currentPage) + 4) && i <= totalPages; i++) { %>
					<% if (i == currentPage) { %>
						<li class="active page-item"><a class="page-link"><%= i %></a></li>
					<% } else { %>
						<li class="page-item"><a class="page-link" href="/?page=<%= i %>"><%= i %></a></li>
					<% } %>
					<% if (i == Number(currentPage) + 4 && i < totalPages) { %>
						<li class="disabled page-item"><a class="page-link">...</a></li>
					<% } %>
				<% } %>
				<% if (currentPage == totalPages) { %>
					<li class="disabled page-item"><a class="page-link">Last</a></li>
				<% } else { %>
					<li class="page-item"><a class="page-link" href="/?page=<%= totalPages %>">Last</a></li>
				<% } %>
			</ul>
		<% } %>
		</div>
	</div>

</body>
</html>

<script src="/public/js/home.js"></script>
